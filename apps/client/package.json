{
  "name": "workspace-client",
  "version": "1.0.0",
  "main": "main.js",
  "homepage": "https://github.com/SandersonnDev/workspace#readme",
  "description": "Workspace Client - Interface utilisateur collaborative",
  "author": {
    "name": "Sandersonn",
    "email": "contact@sandersonn.dev"
  },
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron-forge start",
    "dev:debug": "ELECTRON_ENABLE_LOGGING=1 electron-forge start",
    "build": "electron-forge make",
    "build:win": "electron-forge make --platform win32",
    "build:mac": "electron-forge make --platform darwin",
    "build:linux": "electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js"
  },
  "build": {
    "appId": "com.workspace.client",
    "productName": "Workspace Client",
    "electronVersion": "39.2.4",
    "icon": "public/src/icons/logo.svg",
    "publish": {
      "provider": "github",
      "owner": "SandersonnDev",
      "repo": "Workspace",
      "releaseType": "draft"
    },
    "files": [
      "main.js",
      "preload.js",
      "lib/**/*",
      "public/**/*"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/src/icons/logo.svg",
      "category": "Utility"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SandersonnDev/workspace.git"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.0.0"
  },
  "bugs": {
    "url": "https://github.com/SandersonnDev/workspace/issues"
  }
}

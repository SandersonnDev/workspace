{
  "name": "workspace-server",
  "version": "2.0.0",
  "main": "main.js",
  "homepage": "https://github.com/SandersonnDev/workspace#readme",
  "description": "Workspace Server - Backend Fastify + TypeScript avec Dashboard Electron",
  "author": "Sandersonn",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-webpack": "^7.11.1",
    "@electron-forge/publisher-github": "^7.10.2",
    "electron": "^39.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"tsc --watch\" \"electron .\"",
    "dev:api": "node server.js",
    "start:api": "node server.js",
    "reset-db": "node reset-db.js",
    "regenerate-pdfs": "node regenerate-pdfs.js",
    "dev:backend": "tsx watch src/main.ts",
    "server": "node dist/main.js",
    "build": "tsc && electron-forge make && npm run copy-deps",
    "copy-deps": "rm -rf out/workspace-server-linux-x64/resources/app/node_modules && cp -r node_modules out/workspace-server-linux-x64/resources/app/",
    "build:api": "tsc && npm run package:api",
    "package:api": "mkdir -p out && cp server.js out/ && cp -r data out/ && cp package.json out/ && cp -r public out/ && cp -r lib out/ && cp -r middleware out/ && cp -r models out/ && cp -r routes out/ && cp logger.js out/ && cp chat-logger.js out/ && cp regenerate-pdfs.js out/ && cp reset-db.js out/",
    "build:win": "tsc && electron-forge make --platform win32",
    "build:mac": "tsc && electron-forge make --platform darwin",
    "build:linux": "tsc && electron-forge make --platform linux",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts"
  },
  "build": {
    "appId": "com.workspace.server",
    "productName": "Workspace Server",
    "publish": {
      "provider": "github",
      "owner": "SandersonnDev",
      "repo": "Workspace",
      "releaseType": "draft"
    },
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "routes/**/*",
      "models/**/*",
      "public/**/*",
      "database.js",
      "logger.js",
      "chat-logger.js",
      "updates.js"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SandersonnDev/workspace.git"
  },
  "bugs": {
    "url": "https://github.com/SandersonnDev/workspace/issues"
  }
}

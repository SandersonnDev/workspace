{
  "name": "workspace-server",
  "version": "1.0.0",
  "main": "main.js",
  "homepage": "https://github.com/SandersonnDev/workspace#readme",
  "description": "Workspace Server - Backend API et Dashboard monitoring",
  "author": "Sandersonn",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-webpack": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "jest": "^29.7.0"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "server": "node server.js",
    "server:dev": "node server.js --dev",
    "build": "electron-forge make",
    "build:win": "electron-forge make --platform win32",
    "build:mac": "electron-forge make --platform darwin",
    "build:linux": "electron-forge make --platform linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js"
  },
  "build": {
    "appId": "com.workspace.server",
    "productName": "Workspace Server",
    "publish": {
      "provider": "github",
      "owner": "SandersonnDev",
      "repo": "Workspace",
      "releaseType": "draft"
    },
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "routes/**/*",
      "models/**/*",
      "public/**/*",
      "database.js",
      "logger.js",
      "chat-logger.js",
      "updates.js"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SandersonnDev/workspace.git"
  },
  "bugs": {
    "url": "https://github.com/SandersonnDev/workspace/issues"
  }
}

{
  "name": "workspace-server",
  "version": "2.0.0",
  "main": "main.js",
  "homepage": "https://github.com/SandersonnDev/workspace#readme",
  "description": "Workspace Server - Backend Fastify + TypeScript avec Dashboard Electron",
  "author": "Sandersonn",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron": "^39.0.0",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.22.1",
    "fastify": "^4.24.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-webpack": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/supertest": "^6.0.2",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"tsc --watch\" \"electron .\"",
    "dev:api": "node server.js",
    "start:api": "node server.js",
    "dev:backend": "tsx watch src/main.ts",
    "server": "node dist/main.js",
    "build": "tsc && electron-forge make",
    "build:win": "tsc && electron-forge make --platform win32",
    "build:mac": "tsc && electron-forge make --platform darwin",
    "build:linux": "tsc && electron-forge make --platform linux",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .js,.ts"
  },
  "build": {
    "appId": "com.workspace.server",
    "productName": "Workspace Server",
    "publish": {
      "provider": "github",
      "owner": "SandersonnDev",
      "repo": "Workspace",
      "releaseType": "draft"
    },
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "routes/**/*",
      "models/**/*",
      "public/**/*",
      "database.js",
      "logger.js",
      "chat-logger.js",
      "updates.js"
    ],
    "win": {
      "target": [
        "portable",
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SandersonnDev/workspace.git"
  },
  "bugs": {
    "url": "https://github.com/SandersonnDev/workspace/issues"
  }
}

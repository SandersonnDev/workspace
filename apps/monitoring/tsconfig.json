{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": [
    "*.js",
    "lib/**/*.js",
    "routes/**/*.js",
    "middleware/**/*.js",
    "models/**/*.js",
    "public/**/*.js"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}


{
  "name": "workspace-root",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://github.com/SandersonnDev/workspace#readme",
  "description": "Workspace - Application collaborative client-serveur (v2.0)",
  "author": "Sandersonn",
  "license": "MIT",
  "workspaces": [
    "apps/client",
    "apps/server"
  ],
  "dependencies": {
    "jsonwebtoken": "^9.0.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-webpack": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-regular-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "eslint": "^8.54.0",
    "html-loader": "^5.1.0",
    "jest": "^29.7.0",
    "raw-loader": "^4.0.2",
    "style-loader": "^4.0.0"
  },
  "scripts": {
    "client": "npm start --workspace=apps/client",
    "server": "npm run server --workspace=apps/server",
    "server:dev": "npm run server:dev --workspace=apps/server",
    "all": "npm run client --workspace=apps/client & npm run server --workspace=apps/server",
    "build": "npm run build --workspaces",
    "build:client": "npm run build --workspace=apps/client",
    "build:server": "npm run build --workspace=apps/server",
    "test": "npm test --workspaces",
    "test:client": "npm test --workspace=apps/client",
    "test:server": "npm test --workspace=apps/server",
    "lint": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces && rm -rf apps/*/dist apps/*/out"
  },
  "build": {
    "appId": "com.workspace.monorepo",
    "productName": "Workspace",
    "publish": {
      "provider": "github",
      "owner": "SandersonnDev",
      "repo": "Workspace",
      "releaseType": "draft"
    }
  }
}

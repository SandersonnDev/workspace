{
  "name": "workspace-v2",
  "version": "2.0.0",
  "description": "Workspace management application with two Electron apps",
  "private": true,
  "workspaces": [
    "apps/server",
    "apps/client",
    "apps/proxmox"
  ],
  "scripts": {
    "dev": "concurrently \"npm run start:api --workspace=apps/server\" \"npm start --workspace=apps/client\"",
    "dev:server": "npm run start:api --workspace=apps/server",
    "dev:server:ui": "npm run dev --workspace=apps/server",
    "dev:client": "npm run dev --workspace=apps/client",
    "build": "npm run build --workspaces",
    "build:server": "npm run build --workspace=apps/server",
    "build:client": "npm run build --workspace=apps/client",
    "build:production": "node build-production.js",
    "start": "concurrently \"npm start --workspace=apps/server\" \"npm start --workspace=apps/client\"",
    "start:server": "npm start --workspace=apps/server",
    "start:client": "npm start --workspace=apps/client",
    "reset-db": "npm run reset-db --workspace=apps/server",
    "test": "npm run test --workspaces",
    "lint": "eslint \"apps/**/src/**/*.{ts,js}\" \"apps/proxmox/**/*.ts\" --fix",
    "format": "prettier --write \"apps/**/*.{ts,js,css,json}\"",
    "type-check": "npm run type-check --workspace=apps/server",
    "docker:proxmox:build": "docker compose -f docker/proxmox/docker-compose.yml build proxmox",
    "docker:proxmox:up": "docker compose -f docker/proxmox/docker-compose.yml up -d",
    "docker:proxmox:logs": "docker compose -f docker/proxmox/docker-compose.yml logs -f proxmox",
    "docker:proxmox:down": "docker compose -f docker/proxmox/docker-compose.yml down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.2.0"
  }
}

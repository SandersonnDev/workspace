{
  "name": "workspace-proxmox",
  "version": "1.0.0",
  "description": "Proxmox Backend - Dedicated branch",
  "private": true,
  "workspaces": [
    "apps/proxmox"
  ],
  "scripts": {
    "install:proxmox": "npm install --workspace=apps/proxmox",
    "build:proxmox": "npm run build --workspace=apps/proxmox",
    "test:proxmox": "npm run test --workspace=apps/proxmox",
    "lint": "eslint \"apps/proxmox/**/*.ts\" --fix",
    "format": "prettier --write \"apps/proxmox/**/*.{ts,js,json}\""
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=10.2.0"
  }
}

# Node.js Backend Service
NODE_ENV=production
API_PORT=4000
PORT=4000
DEBUG_MODE=false
LOG_LEVEL=info

# Security
JWT_SECRET=change-me-in-production-generate-random-string
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# PostgreSQL Database Service
DB_HOST=db
DB_PORT=5432
DB_NAME=workspace
DB_USER=workspace
DB_PASSWORD=devpass
POSTGRES_DB=workspace
POSTGRES_USER=workspace
POSTGRES_PASSWORD=devpass

# Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# Server Info
SERVER_IP=0.0.0.0
SERVER_HOST=0.0.0.0
NODE_PORT=3000
WS_PORT=4000

# Performance Tuning
CACHE_MAX_SIZE=1000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# Docker specific
COMPOSE_PROJECT_NAME=workspace-proxmox

# Environment
NODE_ENV=development
PORT=8060

# Database
DATABASE_PATH=./data/database.sqlite
DB_POOL_SIZE=5
DB_POOL_TIMEOUT=10000

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=7d
BCRYPT_ROUNDS=12

# Features
ENABLE_CHAT=true
ENABLE_MONITORING=true
ENABLE_DEBUG=false
LOG_LEVEL=info

